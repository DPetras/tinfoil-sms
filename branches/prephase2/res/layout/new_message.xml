<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:id="@+id/new_message_number_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#000000" >

        <AutoCompleteTextView
            android:id="@+id/new_message_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="To" >
            <requestFocus />
        </AutoCompleteTextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/black_space"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_above="@+id/new_message_field"
        android:layout_marginTop="10pt"
        android:background="#000000">
        
    </LinearLayout>
    <LinearLayout
        android:id="@+id/new_message_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#000000" >

        <EditText
            android:id="@+id/new_message_message"
            android:layout_width="0dip"
            android:layout_height="90dp"
            android:layout_weight="1.00"
            android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
            android:maxLength="160"
            android:maxLines="4" />

        <Button
            android:id="@+id/new_message_send"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="Send" />
    </LinearLayout>

</RelativeLayout>